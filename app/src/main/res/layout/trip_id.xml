<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>
<ScrollView
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="5dp"
            android:background="@color/colorTripBillGrey"
            >

            <ImageView
                android:background="@color/colorTripBillGrey"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/mapline"
                />

            <LinearLayout
                android:background="@color/colorTripBillGrey"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <LinearLayout

                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    android:weightSum="2"
                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    <TextView
                        android:fontFamily="serif"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit ="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scrollHorizontally="true"
                        android:maxLines="1"

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:id="@+id/txtsource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:text=""
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />
                    </HorizontalScrollView>
                    <!--<TextView
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/txtRate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingTop="5dp"
                        android:text="35"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />-->
                </LinearLayout>

                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrey"
                    />

                <LinearLayout

                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <LinearLayout
                        android:layout_weight="4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <HorizontalScrollView
                            android:scrollbars="none"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                        <TextView
                            android:fontFamily="serif"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit ="marquee_forever"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:scrollHorizontally="true"
                            android:maxLines="1"

                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:id="@+id/txtDestination"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:paddingTop="5dp"
                            android:text=""
                            android:paddingBottom="5dp"
                            android:textColor="#000000"

                            />
                        </HorizontalScrollView>
                        <!--<TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/txtTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:paddingTop="5dp"
                            android:text="35"
                            android:paddingBottom="5dp"
                            android:textColor="#000000"
                            />-->
                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                />

            <TextView
                android:fontFamily="serif"
                android:visibility="gone"
                android:layout_margin="5dp"
               android:layout_weight="4"
                android:id="@+id/txtCustMobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:text="Customer Mobile No: 9878546475"
                android:paddingBottom="5dp"
                android:textColor="@color/colorBlack"
                />


        </LinearLayout>


    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            />
    <LinearLayout
        android:layout_weight="4.5"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            android:layout_margin="5dp"
            <TextView
                android:fontFamily="serif"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:text="@string/KMS"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                />

            <TextView
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:text="₹"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                />

            <!--<TextView

                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:text="₹"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                />-->
            android:layout_margin="5dp"
            <ImageView
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:src="@drawable/clock"

                android:gravity="center"
                />

            </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            android:layout_margin="5dp"
            <TextView
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/txtDistance"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:text="0"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                />
            android:layout_margin="5dp"
            <TextView
                android:fontFamily="serif"
                android:id="@+id/txtAmount"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:text="00"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                />

            <TextView
                android:fontFamily="serif"
                android:id="@+id/txtTime"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:text="00 min"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                />

        </LinearLayout>

        </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:background="@color/colorTripBillGrey"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_weight="0.5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        />
    <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="serif"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:text="@string/bill_details"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            />

        </LinearLayout>
        </LinearLayout>



        <LinearLayout

            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />
            <LinearLayout
                android:layout_weight="4.5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="serif"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    android:text="@string/ridecharges"
                    android:paddingBottom="5dp"
                    android:textColor="#000000"
                    />



                    <TextView
                        android:fontFamily="serif"
                        android:id="@+id/txtRideCharge"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:text="00"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />

            </LinearLayout>

                <LinearLayout

                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="serif"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:text="@string/fees"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:fontFamily="serif"
                        android:id="@+id/txtFee"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:text="0"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />

                </LinearLayout>

                <LinearLayout

                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="serif"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:text="@string/discount_amount"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:fontFamily="serif"
                        android:id="@+id/txtDiscount"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:text="0"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />

                </LinearLayout>
                <View
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrey"
                    />

                <LinearLayout

                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="serif"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:text="@string/totalpayout"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:fontFamily="serif"
                        android:id="@+id/txtTotalBill"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:text="00"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:background="@color/colorDarkYellow"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />

            <LinearLayout

                android:layout_weight="4.5"

                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:fontFamily="serif"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/payment"
                    android:paddingBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <TextView
                    android:fontFamily="serif"
                    android:id="@+id/txtPaymentMode"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    android:text="Cash"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:textColor="#000000"
                    />

                    </LinearLayout>

                <TextView
                    android:fontFamily="serif"
                    android:id="@+id/txtTotalAmt2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="₹00"
                    android:paddingBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>



        </LinearLayout>

</ScrollView>
</LinearLayout>